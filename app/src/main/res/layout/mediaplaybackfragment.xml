<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15sp"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="120sp"
            android:layout_height="match_parent"
            android:layout_margin="8sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_launcher_foreground" />


        <TextView
            android:id="@+id/song1"
            android:layout_width="220dp"
            android:layout_height="74dp"
            android:layout_margin="8sp"
            android:text="TextView" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="32dp"
            android:layout_height="30dp"
            android:layout_marginVertical="30sp"
            app:srcCompat="@drawable/ic_queue_dark" />


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="33dp"
            android:layout_height="30dp"
            android:layout_marginVertical="30sp"
            app:srcCompat="@drawable/ic_dau3cham" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="490sp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="29dp"
            android:layout_height="26dp"
            app:srcCompat="@drawable/ic_repeat_dark" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="335sp"
            app:srcCompat="@drawable/ic_shuffle_dark" />

    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_1">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="335sp"
            android:text="@string/time_2">

        </TextView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1sp"
            app:srcCompat="@drawable/ic_thumbs_up_default" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="70sp"
            app:srcCompat="@drawable/ic_rew_dark" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30sp"
            app:srcCompat="@drawable/ic_pause_black_large" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30sp"
            app:srcCompat="@drawable/ic_fwd_dark" />


        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="80sp"
            app:srcCompat="@drawable/ic_thumbs_down_default" />

        </LinearLayout>


</LinearLayout>